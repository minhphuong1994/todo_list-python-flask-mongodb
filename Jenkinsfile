pipeline{
  agent any
  stages{
    stage("build"){
      steps{
        echo 'building the app from jenkinds declarative script;
      }
    }
    
    stage("test"){
      steps{
        echo 'testing the app from jenkinds declarative script;
      }
    }
    
    stage("deploy"){
      steps{
        echo 'deploying the app from jenkinds declarative script;
      }
    }
  }

}
